@startuml
' TutBook UI Component Class Diagram
' JavaFX-based GUI for tuition centre management
' CommandBox: CLI input for commands (add, edit, delete, addClass, join, link, attend)
' PersonListPanel: Displays students, tutors, and parents with their details
' ClassListPanel: Displays tuition classes with enrolled students and tutors
' SessionListPanel: Displays class sessions with date, time, and attendance info
' ResultDisplay: Shows command execution results and feedback
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor UI_COLOR_T4
skinparam classBackgroundColor UI_COLOR

package UI <<Rectangle>>{
Class "<<interface>>\nUi" as Ui
Class "{abstract}\nUiPart" as UiPart
Class UiManager
Class MainWindow
Class HelpWindow
Class ResultDisplay
Class PersonListPanel
Class PersonCard
Class ClassListPanel
Class ClassCard
Class SessionListPanel
Class SessionCard
Class StatusBarFooter
Class CommandBox
}

package Model <<Rectangle>> {
Class HiddenModel #FFFFFF
}

package Logic <<Rectangle>> {
Class HiddenLogic #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Ui

UiManager .left.|> Ui
UiManager -down-> "1" MainWindow
MainWindow *-down->  "1" CommandBox
MainWindow *-down-> "1" ResultDisplay
MainWindow *-down-> "1" PersonListPanel
MainWindow *-down-> "1" ClassListPanel
MainWindow *-down-> "1" SessionListPanel
MainWindow *-down-> "1" StatusBarFooter
MainWindow --> "0..1" HelpWindow

PersonListPanel -down-> "*" PersonCard
ClassListPanel -down-> "*" ClassCard
SessionListPanel -down-> "*" SessionCard

MainWindow -left-|> UiPart

ResultDisplay --|> UiPart
CommandBox --|> UiPart
PersonListPanel --|> UiPart
PersonCard --|> UiPart
ClassListPanel --|> UiPart
ClassCard --|> UiPart
SessionListPanel --|> UiPart
SessionCard --|> UiPart
StatusBarFooter --|> UiPart
HelpWindow --|> UiPart

PersonCard ..> Model
ClassCard ..> Model
SessionCard ..> Model
UiManager -right-> Logic
MainWindow -left-> Logic

PersonListPanel -[hidden]left- HelpWindow
HelpWindow -[hidden]left- CommandBox
CommandBox -[hidden]left- ResultDisplay
ResultDisplay -[hidden]left- StatusBarFooter

MainWindow -[hidden]-|> UiPart
@enduml
